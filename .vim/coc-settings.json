{
    "yank.enableCompletion": false,
    "coc.preferences.extensionUpdateCheck": "never",
    "workspace.rootPatterns": ["compile_commands.json", ".git"],
    "suggest.labelMaxLength": 50,
    "http.proxyStrictSSL": false,
    "suggest.defaultSortMethod": "none",
    "suggest.reversePumAboveCursor": true,
    "notification.disabledProgressSources": [],
    "colors.enable": true,
    "diagnostic.virtualText": false,
    "inlayHint.enable": true,
    "inlayHint.enableParameter": true,

    "diagnostic-languageserver.filetypes":{
        "vim":"vint"
    },

    "cSpell": {
        "enabled": true,
        "language": "en",
        "showStatus": true,
        // like 'errormessage'
        "allowCompoundWords": false,
        "ignoreWords": ["ASML", "asml", "behaviour", "clangd", "cmake"],
        "cSpell.ignorePaths": [
            "node_modules", // this will ignore anything the node_modules directory
            "**/node_modules", // the same for this one
            "**/node_modules/**", // the same for this one
            "node_modules/**", // Doesn't currently work due to how the current working directory is determined.
            "vscode-extension", //
            ".git", // Ignore the .git directory
            "*.dll", // Ignore all .dll files.
            "**/*.dll" // Ignore all .dll files
        ],
        "flagWords": ["hte", "mian", "ture"]
    },

    "languageserver": {
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": ["cmake"],
            "initializationOptions": {
                "buildDirectory": "build_root"
            }
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        }
    },

    "clangd": {
        "filetypes": ["c", "cpp", "cuda", "objc", "objcpp", "cc", "c++"],
        "arguments": [
            "--clang-tidy",
            "--enable-config",
            "--header-insertion-decorators",
            "--header-insertion=iwyu",
            "--background-index",
            "--cross-file-rename",
            "--all-scopes-completion",
            "--fallback-style=LLVM",
            "-j=12"
        ],
        "compilationDatabaseCandidates": ["${workspaceFolder}"],
        "semanticHighlighting": true,
        "disableDiagnostics": false,
        "disableCompletion": false,
        "disableSnippetCompletion": false
    },
    "clangd.enabled": true,
    "clangd.inlayHints.enable": true,
    "semanticTokens.filetypes": ["*"],

    "cmake.lsp.serverPath": "cmake-language-server",
    "cmake.lsp.buildDirectory": "build_root",
    "cmake.formatter": "cmake-format",

    "xml.server.binary.path": "~/.config/coc/extensions/coc-xml-data/org.eclipse.lemminx-0.11.0.jar",
    "markdown-preview-enhanced.enableScriptExecution": true,

    "tabnine.priority": 10,

    "git.enableGutters": true

}
